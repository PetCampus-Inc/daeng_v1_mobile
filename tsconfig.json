{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],

    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react-native",
    "removeComments": true,
    "skipLibCheck": true,

    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["src", "env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "babel.config.cjs", "metro.config.cjs", "jest.config.cjs"]
}
